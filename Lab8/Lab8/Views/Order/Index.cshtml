@model IEnumerable<Lab8.Models.Order>

@{
    ViewData["Title"] = "Order List";
}

<h1>Order List</h1>

<a asp-action="Create" class="btn btn-success mb-3">Create New Order</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Order Date</th>
            <th>Total Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Customer?.FullName</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@order.TotalPrice.ToString("N0")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this order?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
