@model Lab8.Models.Order

<h1>Create Order</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-2">
        <label>Customer</label>
        <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerList">
            <option value="">-- Select Customer --</option>
        </select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Order Date</label>
        <input asp-for="OrderDate" type="datetime-local" class="form-control" value="@Model?.OrderDate.ToString("yyyy-MM-ddTHH:mm")" />
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Total Price</label>
        <input asp-for="TotalPrice" class="form-control" />
        <span asp-validation-for="TotalPrice" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
