@model Lab8.Models.Car

@{
    ViewData["Title"] = "Car Details";
}

<h2>Car Details</h2>

<div class="card p-3">
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Model:</strong> @Model.CarModel?.Name</p>
    <p><strong>Brand:</strong> @Model.CarModel?.Brand?.Name</p>
    <p><strong>Price:</strong> @Model.Price.ToString("N0")</p>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" width="300" class="mt-2" />
    }
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
