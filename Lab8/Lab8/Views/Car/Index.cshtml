@model IEnumerable<Lab8.Models.Car>

@{
    ViewData["Title"] = "Car List";
}

<h1>Car List</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New Car</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Car Name</th>
            <th>Model</th>
            <th>Brand</th>
            <th>ImgURL</th>
            <th>Price</th>
            <th style="width:200px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Id</td>
                <td>@car.Name</td>
                <td>@car.CarModel?.Name</td>
                <td>@car.CarModel?.Brand?.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(car.ImageUrl))
                    {
                        <img src="@car.ImageUrl" alt="@car.Name" style="height:50px;" />
                    }
                    else
                    {
                        <span>No image</span>
                    }
                </td>
                <td>@car.Price.ToString("N0")</td>
                <td>
                    <a class="btn btn-success btn-sm"
                       asp-action="Details"
                       asp-route-id="@car.Id">Detail</a>

                    <a class="btn btn-warning btn-sm"
                       asp-action="Edit"
                       asp-route-id="@car.Id">Edit</a>

                    <a class="btn btn-danger btn-sm"
                       asp-action="Delete"
                       asp-route-id="@car.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
