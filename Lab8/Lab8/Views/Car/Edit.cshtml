@model Lab8.Models.Car

@{
    ViewData["Title"] = "Edit Car";
}

<h1>Edit Car</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Car Model</label>
        <select asp-for="CarModelId" asp-items="ViewBag.CarModelList" class="form-control">
            <option value="">-- Select Car Model --</option>
        </select>
        <span asp-validation-for="CarModelId" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label>Current Image</label><br />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Car Image" style="max-width:200px;" />
        }
        else
        {
            <span>No image</span>
        }
    </div>

    <div class="form-group mb-2">
        <label>Change Image</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
